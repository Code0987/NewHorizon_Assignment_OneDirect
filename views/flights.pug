            p #{flight.name} (#{flight.id})
          .col-sm-2
            p #{flight.departure}
          .col-sm-2
            p #{flight.arrival}
          .col-sm-2
            p #{flight.duration}
          .col-sm-1
            p â‚¹#{flight.price}
          .col-sm-1
            p #{flight.seats_left} left
          .col-sm-1
            form.form-horizontal(method='POST', action='/book')
              input.form-control(type='hidden', name='src', id='src', value=src)
              input.form-control(type='hidden', name='dest', id='dest', value=dest)
              input.form-control(type='hidden', name='date', id='date', value=datems)
