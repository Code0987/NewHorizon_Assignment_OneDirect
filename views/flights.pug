extends layout

block content
  p.lead Flights from #{src} to #{dest} on #{date} ...
  hr
  .row
    .col-sm-12
      .row
        .col-sm-3
          p Flight
        .col-sm-2
          p Departure
        .col-sm-2
          p Arrival
        .col-sm-2
          p Duration
        .col-sm-2
          p Price
        .col-sm-1
